{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "checkJs": true,
    "removeComments": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules"]
}
