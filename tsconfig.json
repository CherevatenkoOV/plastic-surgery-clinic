{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "target": "es2023",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "rootDir": "src",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Transpiling with TypeScript */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

  },

  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
